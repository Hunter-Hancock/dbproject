package auth

templ SignUpPage() {
	<html data-theme="light" lang="en">
		<head>
			<title>Create Account</title>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1"/>
			<link rel="stylesheet" href="/assets/css/styles.css"/>
			<link href="https://cdn.jsdelivr.net/npm/daisyui@4.10.2/dist/full.min.css" rel="stylesheet" type="text/css"/>
			<script src="/assets/js/htmx.min.js"></script>
		</head>
		<body>
			<main class="flex flex-col justify-center items-center min-h-screen">
				<h1>Create an Account</h1>
				<form class="flex flex-col mt-auto border border-2 gap-2 w-[500px]" hx-post="/api/signup">
					<label for="email">Email</label>
					<input class="border" name="email" type="email"/>
					<label for="password">Password</label>
					<input class="border" name="password" type="password"/>
					<button class="border">Create Account</button>
				</form>
			</main>
		</body>
	</html>
}
